<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Use iisnode to handle Node.js -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>

    <!-- Rewrite rules -->
    <rewrite>
      <rules>
        <!-- Serve Next.js static files directly -->
        <rule name="NextStatic" stopProcessing="true">
          <match url="^_next/.*" />
          <action type="None" />
        </rule>

        <!-- Route all other requests to server.js -->
        <rule name="NodeServer">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Enable logging and detailed errors -->
    <iisnode loggingEnabled="false" devErrorsEnabled="false"/>
  </system.webServer>
</configuration>
