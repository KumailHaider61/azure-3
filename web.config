<!--
     This configuration file is required for deploying a Next.js application 
     to Azure App Service on a Windows (IIS) environment. It configures IIS
     to properly handle and forward requests to the Node.js server.
-->
<configuration>
  <system.webServer>
    <handlers>
      <!--
        Indicates that the server.js file is a Node.js application 
        to be handled by the iisnode module.
      -->
      <add name="iisnode" path="node_modules/next/dist/bin/next" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- 
          Do not interfere with requests for static files.
          Let IIS serve these directly for better performance.
        -->
        <rule name="static" stopProcessing="true">
          <match url="^_next/.+" ignoreCase="false" />
          <action type="None" />
        </rule>

        <!-- 
          Route all other incoming requests to the Next.js application.
        -->
        <rule name="app">
          <match url="/*" />
          <action type="Rewrite" url="node_modules/next/dist/bin/next" />
        </rule>
      </rules>
    </rewrite>

    <!--
      You may need to increase this value for longer running requests.
      This value is in seconds.
    -->
    <iisnode node_env="production" nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;" watchedFiles="*.js;node_modules\*;routes\*;views\*" />

  </system.webServer>
</configuration>
